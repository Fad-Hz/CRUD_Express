<title><%= title %></title>
<%- include('layout/header.ejs') %>
<div class="container" style="margin-bottom: 7rem;">
    <div class="row">
        <div class="col-lg-12">
            <div class="search-container" style="margin: 1rem 0;">
                <input 
                  type="text" 
                  id="search-input" 
                  class="form-control" 
                  placeholder="Search by name..."
                  style="max-width: 300px; margin: auto;">
              </div>              
            <% if (message) { %>
                <div class="alert alert-dismissible fade show <%= message.type %>" role="alert">
                    <strong><%= message.message %></strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <div class="table-responsive" style="margin-top: 2rem;">
                <% if (users != '') { %>
                    <table class="table table-striped text-center">
                        <thead>
                        <tr class="table-dark">
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% users.forEach((user, index) => { %>
                        <tr>
                            <td><%= index %></td>
                            <td><img src="<%= user.image %>" width="50" class="img-thumbnail"></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td>
                                <a href="/edit/<%= user._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1 mt-2"></i></a>
                                <a href="/delete/<%= user._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1 mt-2"></i></a>
                            </td>
                        </tr>
                      <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Users Found in Database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer.ejs') %>